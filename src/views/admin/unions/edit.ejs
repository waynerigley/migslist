<%- include('../../partials/header', {
  title: union ? 'Edit Union' : 'Create Union',
  backLink: '/admin/unions'
}) %>

<div class="form-container">
  <form action="<%= union ? '/admin/unions/' + union.id : '/admin/unions' %>" method="POST">
    <div class="form-group">
      <label for="name">Union Name</label>
      <input type="text" id="name" name="name" value="<%= union ? union.name : '' %>" required autofocus placeholder="e.g., Local 4508">
    </div>

    <div class="form-actions">
      <button type="submit" class="btn btn-primary"><%= union ? 'Update' : 'Create' %> Union</button>
      <a href="/admin/unions" class="btn btn-outline">Cancel</a>
    </div>
  </form>
</div>

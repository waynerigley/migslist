<%- include('../../partials/header', { title: union.name, backLink: '/admin/unions' }) %>

<div class="subscription-card">
  <div class="subscription-header">
    <h3>Subscription Status</h3>
    <% if (union.payment_status === 'trial') { %>
      <span class="badge badge-info">Trial</span>
    <% } else if (union.payment_status === 'paid') { %>
      <span class="badge badge-success">Paid</span>
    <% } else if (union.payment_status === 'free') { %>
      <span class="badge badge-success">Free</span>
    <% } else if (union.status === 'expired') { %>
      <span class="badge badge-danger">Expired</span>
    <% } else { %>
      <span class="badge badge-secondary">Unpaid</span>
    <% } %>
  </div>
  <div class="subscription-details">
    <div class="detail-row">
      <span class="label">Status:</span>
      <span class="value"><%= union.status || 'pending' %></span>
    </div>
    <% if (union.subscription_start) { %>
    <div class="detail-row">
      <span class="label">Started:</span>
      <span class="value"><%= new Date(union.subscription_start).toLocaleDateString() %></span>
    </div>
    <% } %>
    <% if (union.subscription_end) { %>
    <div class="detail-row">
      <span class="label">Expires:</span>
      <span class="value"><%= new Date(union.subscription_end).toLocaleDateString() %></span>
    </div>
    <% } %>
    <% if (union.payment_reference) { %>
    <div class="detail-row">
      <span class="label">Reference:</span>
      <span class="value"><%= union.payment_reference %></span>
    </div>
    <% } %>
  </div>
  <div class="subscription-actions">
    <form action="/admin/unions/<%= union.id %>/grant-free-year" method="POST" class="inline-form" onsubmit="return confirm('Grant free year?')">
      <button type="submit" class="btn btn-success btn-sm">Grant Free Year</button>
    </form>
    <form action="/admin/unions/<%= union.id %>/extend" method="POST" class="inline-form">
      <input type="number" name="days" value="30" min="1" max="365" style="width: 60px;">
      <button type="submit" class="btn btn-outline btn-sm">Extend Days</button>
    </form>
    <% if (union.status === 'active') { %>
    <form action="/admin/unions/<%= union.id %>/deactivate" method="POST" class="inline-form" onsubmit="return confirm('Deactivate this union?')">
      <button type="submit" class="btn btn-warning btn-sm">Deactivate</button>
    </form>
    <% } else { %>
    <form action="/admin/unions/<%= union.id %>/activate" method="POST" class="inline-form">
      <button type="submit" class="btn btn-primary btn-sm">Activate</button>
    </form>
    <% } %>
  </div>
</div>

<div class="stats-grid stats-grid-3">
  <div class="stat-card">
    <div class="stat-value"><%= stats.bucket_count || 0 %></div>
    <div class="stat-label">Units/Sectionals</div>
  </div>
  <div class="stat-card">
    <div class="stat-value"><%= stats.total_members || 0 %></div>
    <div class="stat-label">Total Members</div>
  </div>
  <div class="stat-card">
    <div class="stat-value"><%= stats.good_standing_count || 0 %></div>
    <div class="stat-label">Good Standing</div>
  </div>
</div>

<div class="action-bar">
  <a href="/admin/unions/<%= union.id %>/edit" class="btn btn-outline">Edit Union</a>
  <form action="/admin/unions/<%= union.id %>/delete" method="POST" class="inline-form" onsubmit="return confirm('Delete this union and all its data?')">
    <button type="submit" class="btn btn-danger">Delete Union</button>
  </form>
</div>

<section class="dashboard-section">
  <div class="section-header">
    <h2>Units/Sectionals</h2>
    <div class="header-actions">
      <button type="button" class="btn-export" onclick="openExportModal()">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
          <polyline points="7 10 12 15 17 10"/>
          <line x1="12" y1="15" x2="12" y2="3"/>
        </svg>
        Export Rank-and-File
      </button>
      <a href="/admin/unions/<%= union.id %>/buckets-deleted" class="btn btn-outline btn-sm">Deleted Units/Sectionals</a>
      <a href="/admin/unions/<%= union.id %>/buckets/new" class="btn btn-primary btn-sm">Add Unit/Sectional</a>
    </div>
  </div>
  <% if (buckets.length === 0) { %>
    <div class="empty-state">
      <h3>No units/sectionals yet</h3>
      <p>Create your first unit/sectional to start adding members.</p>
      <a href="/admin/unions/<%= union.id %>/buckets/new" class="btn btn-primary">Create Unit/Sectional</a>
    </div>
  <% } else { %>
    <div class="bucket-grid">
      <% buckets.forEach(bucket => { %>
        <div class="bucket-card">
          <div class="bucket-header">
            <span class="bucket-number">#<%= bucket.number %></span>
            <h3><a href="/admin/unions/<%= union.id %>/buckets/<%= bucket.id %>"><%= bucket.name %></a></h3>
          </div>
          <div class="bucket-stats">
            <div class="bucket-stat">
              <span class="stat-value"><%= bucket.member_count || 0 %></span>
              <span class="stat-label">Members</span>
            </div>
            <div class="bucket-stat">
              <span class="stat-value"><%= bucket.good_standing_count || 0 %></span>
              <span class="stat-label">Good Standing</span>
            </div>
            <div class="bucket-stat compliance-stat">
              <% const memberCount = parseInt(bucket.member_count) || 0; %>
              <% const goodCount = parseInt(bucket.good_standing_count) || 0; %>
              <% const rate = memberCount > 0 ? Math.round((goodCount / memberCount) * 100) : 0; %>
              <span class="stat-value compliance-rate"><%= rate %>%</span>
              <span class="stat-label">Compliance</span>
            </div>
          </div>
          <div class="bucket-actions">
            <a href="/admin/unions/<%= union.id %>/buckets/<%= bucket.id %>" class="btn btn-primary btn-sm">View</a>
            <a href="/admin/unions/<%= union.id %>/buckets/<%= bucket.id %>/edit" class="btn btn-outline btn-sm">Edit</a>
            <button type="button" class="btn btn-danger btn-sm" onclick="openDeleteModal('/admin/unions/<%= union.id %>/buckets/<%= bucket.id %>/delete', '<%= bucket.name %>', <%= bucket.member_count || 0 %>)">Delete</button>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>

<%- include('../../partials/delete-modal') %>

<section class="dashboard-section">
  <div class="section-header">
    <h2>Union Admins</h2>
  </div>
  <% if (users.length === 0) { %>
    <p class="empty-message">No admins assigned to this union.</p>
  <% } else { %>
    <table class="data-table">
      <thead>
        <tr>
          <th>Email</th>
          <th>Name</th>
          <th>Created</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(u => { %>
          <tr>
            <td><%= u.email %></td>
            <td><%= u.first_name || '' %> <%= u.last_name || '' %></td>
            <td><%= new Date(u.created_at).toLocaleDateString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</section>

<!-- Export Modal -->
<div id="exportModal" class="modal-overlay" style="display: none;">
  <div class="modal-content export-modal">
    <div class="modal-header">
      <h3>Export Rank-and-File Members</h3>
      <button type="button" class="modal-close" onclick="closeExportModal()">&times;</button>
    </div>
    <div class="modal-body">
      <p class="export-description">Export all members across all units for Legislative Strike Vote or Ratification Vote purposes.</p>
      <div class="export-options">
        <a href="/admin/unions/<%= union.id %>/export/rank-and-file/excel" class="export-option">
          <div class="export-icon excel-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
            </svg>
          </div>
          <div class="export-label">
            <strong>Excel (.xlsx)</strong>
            <span>Spreadsheet format</span>
          </div>
        </a>
        <a href="/admin/unions/<%= union.id %>/export/rank-and-file/pdf" class="export-option">
          <div class="export-icon pdf-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
            </svg>
          </div>
          <div class="export-label">
            <strong>PDF (.pdf)</strong>
            <span>Print-ready document</span>
          </div>
        </a>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-outline" onclick="closeExportModal()">Cancel</button>
    </div>
  </div>
</div>

<style>
.header-actions {
  display: flex;
  gap: 0.75rem;
  align-items: center;
  flex-wrap: wrap;
}
.btn-export {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  background: linear-gradient(135deg, #059669 0%, #047857 100%);
  color: white;
  border: none;
  border-radius: 6px;
  font-size: 0.875rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  box-shadow: 0 2px 4px rgba(5, 150, 105, 0.3);
}
.btn-export:hover {
  background: linear-gradient(135deg, #047857 0%, #065f46 100%);
  box-shadow: 0 4px 8px rgba(5, 150, 105, 0.4);
  transform: translateY(-1px);
}
.btn-export:active {
  transform: translateY(0);
  box-shadow: 0 2px 4px rgba(5, 150, 105, 0.3);
}
.btn-export svg {
  width: 18px;
  height: 18px;
}
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4px);
}
.modal-content {
  background: var(--bg-primary);
  border-radius: 12px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  max-width: 450px;
  width: 90%;
  animation: modalSlideIn 0.2s ease-out;
}
@keyframes modalSlideIn {
  from { opacity: 0; transform: translateY(-20px); }
  to { opacity: 1; transform: translateY(0); }
}
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.25rem 1.5rem;
  border-bottom: 1px solid var(--border-color);
}
.modal-header h3 {
  margin: 0;
  font-size: 1.25rem;
}
.modal-close {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  color: var(--text-secondary);
  line-height: 1;
  padding: 0;
}
.modal-close:hover {
  color: var(--text-primary);
}
.modal-body {
  padding: 1.5rem;
}
.modal-footer {
  display: flex;
  justify-content: flex-end;
  padding: 1rem 1.5rem;
  border-top: 1px solid var(--border-color);
  background: var(--bg-secondary);
  border-radius: 0 0 12px 12px;
}
.export-description {
  color: var(--text-secondary);
  margin-bottom: 1.5rem;
  text-align: center;
}
.export-options {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}
.export-option {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  border: 2px solid var(--border-color);
  border-radius: 8px;
  text-decoration: none;
  color: var(--text-primary);
  transition: all 0.2s;
}
.export-option:hover {
  border-color: var(--primary);
  background: var(--bg-secondary);
}
.export-icon {
  width: 48px;
  height: 48px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.export-icon svg {
  width: 24px;
  height: 24px;
}
.excel-icon {
  background: #107c41;
  color: white;
}
.pdf-icon {
  background: #dc2626;
  color: white;
}
.export-label {
  display: flex;
  flex-direction: column;
}
.export-label strong {
  font-size: 1rem;
}
.export-label span {
  font-size: 0.875rem;
  color: var(--text-secondary);
}
</style>

<script>
function openExportModal() {
  document.getElementById('exportModal').style.display = 'flex';
}
function closeExportModal() {
  document.getElementById('exportModal').style.display = 'none';
}
document.getElementById('exportModal')?.addEventListener('click', function(e) {
  if (e.target === this) closeExportModal();
});
document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape') closeExportModal();
});
</script>

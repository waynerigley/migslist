<%- include('../../../partials/header', { title: 'Expenses', backLink: '/admin/finance' }) %>

<div class="section-header">
  <div class="filter-bar">
    <form method="GET" action="/admin/finance/expenses" class="filter-form">
      <select name="year" onchange="this.form.submit()">
        <option value="">All Years</option>
        <% years.forEach(y => { %>
          <option value="<%= y %>" <%= selectedYear == y ? 'selected' : '' %>><%= y %></option>
        <% }) %>
      </select>
      <select name="category" onchange="this.form.submit()">
        <option value="">All Categories</option>
        <% categories.forEach(cat => { %>
          <option value="<%= cat.value %>" <%= selectedCategory === cat.value ? 'selected' : '' %>><%= cat.label %></option>
        <% }) %>
      </select>
    </form>
  </div>
  <a href="/admin/finance/expenses/new" class="btn btn-primary">+ Record Expense</a>
</div>

<% if (expenses.length === 0) { %>
  <div class="empty-state">
    <p>No expense records found</p>
    <a href="/admin/finance/expenses/new" class="btn btn-primary">Record your first expense</a>
  </div>
<% } else { %>
  <table class="data-table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Vendor</th>
        <th>Category</th>
        <th>Description</th>
        <th>Receipt</th>
        <th>Amount</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% expenses.forEach(exp => { %>
        <tr>
          <td><%= new Date(exp.expense_date).toLocaleDateString('en-CA') %></td>
          <td><%= exp.vendor || '-' %></td>
          <td>
            <span class="badge"><%= categories.find(c => c.value === exp.category)?.label || exp.category %></span>
          </td>
          <td><%= exp.description || '-' %></td>
          <td>
            <% if (exp.receipt_filename) { %>
              <a href="/admin/finance/expenses/<%= exp.id %>/receipt" target="_blank" class="btn btn-sm btn-outline">View</a>
            <% } else { %>
              -
            <% } %>
          </td>
          <td class="text-danger"><strong>$<%= parseFloat(exp.amount).toFixed(2) %></strong></td>
          <td class="actions">
            <a href="/admin/finance/expenses/<%= exp.id %>/edit" class="btn btn-sm btn-outline">Edit</a>
            <form action="/admin/finance/expenses/<%= exp.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Delete this expense record?')">
              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="5" style="text-align: right;"><strong>Total:</strong></td>
        <td class="text-danger"><strong>$<%= expenses.reduce((sum, exp) => sum + parseFloat(exp.amount), 0).toFixed(2) %></strong></td>
        <td></td>
      </tr>
    </tfoot>
  </table>
<% } %>

<style>
.filter-bar {
  display: flex;
  gap: 1rem;
  align-items: center;
}
.filter-form {
  display: flex;
  gap: 0.5rem;
}
.filter-form select {
  padding: 0.5rem;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 0.875rem;
}
.text-danger { color: #dc2626; }
.actions {
  white-space: nowrap;
}
.actions .btn {
  margin-right: 0.25rem;
}
</style>

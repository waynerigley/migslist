      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12);
    }

    .video-wrapper {
      position: relative;
      padding-bottom: 56.25%; /* 16:9 aspect ratio */
      height: 0;
      overflow: hidden;
    }

    .video-wrapper iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }

    .video-card h3 {
      font-size: 1.125rem;
      font-weight: 600;
      color: #1a1a2e;
      padding: 1.25rem 1.25rem 0.5rem;
    }

    .video-card p {
      font-size: 0.9375rem;
      color: #6b7280;
      padding: 0 1.25rem 1.25rem;
    }

    /* Election Section */
    .election-section {
      padding: 6rem 2rem;
      background: linear-gradient(180deg, #fffbeb 0%, #fef3c7 100%);
    }

    .election-content {
      display: grid;
      grid-template-columns: 1fr 400px;
      gap: 4rem;
      align-items: center;
    }

    .election-text h2 {
      font-size: 2.25rem;
      font-weight: 700;
      margin-bottom: 1rem;
      color: #1a1a2e;
    }

    .election-text > p {
      font-size: 1.125rem;
      color: #4b5563;
      margin-bottom: 2rem;
    }

    .election-risks {
      display: grid;
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .risk-item {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      color: #b91c1c;
      font-weight: 500;
    }

    .risk-item svg {
      width: 20px;
      height: 20px;
      flex-shrink: 0;
    }

    .election-solution {
      display: flex;
      gap: 1rem;
      background: white;
      border-radius: 12px;
      padding: 1.5rem;
      border-left: 4px solid #22c55e;
    }

    .election-solution svg {
      width: 24px;
      height: 24px;
      color: #22c55e;
      flex-shrink: 0;
      margin-top: 2px;
    }

    .election-solution p {
      color: #374151;
      font-size: 0.9375rem;
    }

    .visual-card {
      background: white;
      border-radius: 16px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .visual-header {
      background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
      padding: 1.5rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .visual-badge {
      background: rgba(255, 255, 255, 0.2);
      color: white;
      padding: 0.375rem 0.875rem;
      border-radius: 100px;
      font-size: 0.875rem;
      font-weight: 600;
    }

    .visual-check {
      width: 32px;
      height: 32px;
      background: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .visual-check svg {
      width: 18px;
      height: 18px;
      color: #22c55e;
    }

    .visual-content {
      padding: 1.5rem;
    }

    .visual-row {
      display: flex;
      justify-content: space-between;
      padding: 0.75rem 0;
      border-bottom: 1px solid #f3f4f6;
      font-size: 0.9375rem;
    }

    .visual-row:last-child {
      border-bottom: none;
    }

    .visual-yes {
      color: #22c55e;
      font-weight: 600;
    }

    /* Savings Section */
    .savings-section {
      padding: 5rem 2rem;
      background: #f8fafc;
    }

    .savings-content {
      display: flex;
      align-items: center;
      gap: 2rem;
      max-width: 900px;
      margin: 0 auto;
      background: white;
      border-radius: 20px;
      padding: 3rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .savings-icon {
      width: 80px;
      height: 80px;
      background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
      border-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
    }

    .savings-icon svg {
      width: 40px;
      height: 40px;
      color: white;
    }

    .savings-text h2 {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 0.75rem;
      color: #1a1a2e;
    }

    .savings-text p {
      color: #6b7280;
      font-size: 1rem;
      line-height: 1.7;
    }

    /* CTA Section */
    .cta-section {
      padding: 6rem 2rem;
      background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
    }

    .cta-content {
      max-width: 700px;
      margin: 0 auto;
      text-align: center;
      color: white;
    }

    .cta-content h2 {
      font-size: 2.25rem;
      font-weight: 700;
      margin-bottom: 1rem;
    }

    .cta-content p {
      font-size: 1.125rem;
      opacity: 0.9;
      margin-bottom: 2rem;
    }

    .cta-actions {
      margin-bottom: 1.5rem;
    }

    .cta-note {
      font-size: 0.875rem;
      opacity: 0.75;
    }

    /* Footer */
    .features-footer {
      background: #1a1a2e;
      padding: 2rem;
      text-align: center;
    }

    .footer-container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .features-footer p {
      color: #9ca3af;
      font-size: 0.875rem;
    }

    /* Responsive */
    @media (max-width: 968px) {
      .election-content {
        grid-template-columns: 1fr;
      }

      .election-visual {
        order: -1;
        max-width: 400px;
        margin: 0 auto;
      }
    }

    @media (max-width: 768px) {
      .features-hero h1 {
        font-size: 2rem;
      }

      .features-hero p {
        font-size: 1.0625rem;
      }

      .stats-container {
